# ===================================
# CONFIGURACIÓN DE ENTORNO
# ===================================

# Entorno de ejecución
NODE_ENV=production

# Configuración del servidor
PORT=3000

# Configuración CORS - Múltiples dominios separados por comas
CORS_ORIGINS=https://ingartur.github.io,https://tu-dominio.com,https://www.tu-dominio.com

# ===================================
# CONFIGURACIÓN DE EMAIL
# ===================================

# Servidor SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false

# Credenciales de Gmail
EMAIL_USER=arthurandres30@gmail.com
EMAIL_PASS=tu-contraseña-de-aplicacion-google

# Configuración de emails
EMAIL_FROM=arthurandres30@gmail.com
EMAIL_TO=arthurandres30@gmail.com

# ===================================
# CONFIGURACIÓN DE RATE LIMITING
# ===================================

# Rate limiting para emails (requests por hora)
RATE_LIMIT_MAX=5
RATE_LIMIT_WINDOW=3600000

# ===================================
# CONFIGURACIÓN DE SEGURIDAD
# ===================================

# Headers de seguridad (true/false)
ENABLE_SECURITY_HEADERS=true
ENABLE_CORS=true

# CSP (Content Security Policy) - personalizable si necesario
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' fonts.googleapis.com; font-src 'self' fonts.gstatic.com; img-src 'self' data:; connect-src 'self'

# ===================================
# CONFIGURACIÓN DE LOGS
# ===================================

# Nivel de logs (error, warn, info, debug)
LOG_LEVEL=info

# ===================================
# URLs ADICIONALES (SI SE REQUIEREN)
# ===================================

# URL del frontend para desarrollo
FRONTEND_URL_DEV=http://localhost:8000

# URL del frontend para producción  
FRONTEND_URL_PROD=https://ingartur.github.io/Portafolio